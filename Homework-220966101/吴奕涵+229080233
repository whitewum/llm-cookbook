import os
from openai import OpenAI

client = OpenAI(
  api_key="your-api-key", 
  base_url="https://api.deepseek.com"
)
deployment = "deepseek-chat"

def get_summary(text):
    prompt = f"请将以下文本总结为3-5句:\n\n{text}"
    messages = [{"role": "user", "content": prompt}]
    try:
        response = client.chat.completions.create(
            model=deployment,
            messages=messages,
            temperature=0.7,
            max_tokens=150
        )
        return response.choices[0].message.content
    except Exception as e:
        print(f"API调用失败: {e}")
        return None

def read_text_from_file(file_path):
    try:
        with open(file_path, 'r', encoding='utf-8') as file:
            return file.read()
    except FileNotFoundError:
        print(f"错误：文件 '{file_path}' 不存在。")
    except IOError:
        print(f"错误：无法读取文件 '{file_path}'。")
    return None

def summarize_multiple_texts(file_paths):
    summaries = {}
    for file_path in file_paths:
        text = read_text_from_file(file_path)
        if text:
            summaries[file_path] = get_summary(text)
    return summaries

sample_file_paths = ["file1.txt", "file2.txt"]  
summaries = summarize_multiple_texts(sample_file_paths)
for file, summary in summaries.items():
    print(f"{file} 的总结:\n{summary}\n")
